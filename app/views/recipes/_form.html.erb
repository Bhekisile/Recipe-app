<div class="container">
  <h1 class="mt-4 mb-4">Create a new Recipe</h1>

  <% flash.each do |name, msg| -%>
    <%= content_tag :div, msg, class: "alert alert-#{name}" %>
  <% end -%>

  <%= form_with model: [@recipe], data: { turbo: false }, local: true, class: "mt-4" do |f| %>
    <div class="mb-3">
      <%= f.label :name, class: "form-label" %><br>
      <%= f.text_field :name, required: true, class: "form-control" %>
    </div>

    <div class="mb-3">
      <%= f.label :preparation_time, class: "form-label" %><br>
      <%= f.number_field :preparation_time, required: true, step: 0.1, class: "form-control" %>
    </div>

    <div class="mb-3">
      <%= f.label :cooking_time, class: "form-label" %><br>
      <%= f.number_field :cooking_time, required: true, step: 0.1, class: "form-control" %>
    </div>

    <div class="mb-3">
      <%= f.label :description, class: "form-label" %><br>
      <%= f.text_area :description, class: "form-control" %>
    </div>

    <div class="mb-3 form-check">
      <%= f.check_box :public, class: "form-check-input" %>
      <%= f.label :public, class: "form-check-label" %>
    </div>

    <%= f.submit "Create Recipe", class: "btn btn-primary" %>
  <% end %>
</div>
